{
  "name": "custom-app-base",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "COPILOT_ENV=local next dev",
    "dev:embedded": "COPILOT_ENV=local node scripts/dev.js",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\" \"__tests__/**/*.{ts,tsx,js,jsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\" \"__tests__/**/*.{ts,tsx,js,jsx}\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:mutation": "stryker run",
    "test:mutation:utils": "stryker run --mutate 'src/utils/**/*.ts'",
    "test:mutation:services": "stryker run --mutate 'src/services/**/*.ts'"
  },
  "dependencies": {
    "caniuse-lite": "^1.0.30001701",
    "copilot-design-system": "^0.6.16",
    "copilot-node-sdk": "^3.5.0",
    "copy-container-react": "^1.0.11",
    "next": "^14.1.0",
    "open": "^10.1.0",
    "react": "^18.2.0",
    "react-code-blocks": "^0.1.6",
    "react-dom": "^18.2.0",
    "react-linkify": "^1.0.0-alpha",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@ngrok/ngrok": "^1.4.1",
    "@playwright/test": "^1.50.1",
    "@stryker-mutator/core": "^8.7.1",
    "@stryker-mutator/jest-runner": "^8.7.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/caniuse-lite": "^1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-linkify": "^1",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.0",
    "browserslist": "^4.24.4",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.4.3",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "tailwindcss": "^3.4.1",
    "tsc-files": "^1.1.4",
    "typescript": "^5.3.3"
  },
  "packageManager": "yarn@4.1.0",
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "tsc-files --noEmit"
    ],
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
